# --- Project Configuration ---
DEBUG=true
PROJECT_NAME="ReAct-Gated Mixture-of-Agents"
PYTHON_ENV=development

# --- API Keys (Required based on enabled sub-agents) ---
# Master Agent Provider (Default: groq, can be overridden)
OPENAI_API_KEY=sk-...

# Sub-Agent Providers
# Google Gemini
GOOGLE_API_KEY=...

# Groq
GROQ_API_KEY=gsk_...

# HuggingFace (Optional)
HUGGINGFACE_API_KEY=hf_...

# Anthropic (Optional)
ANTHROPIC_API_KEY=sk-ant-...

# Tavily (Optional)
TAVILY_API_KEY=...

# --- Weights & Biases (Optional, for tracking) ---
WANDB_API_KEY=...

# --- LLM Provider Configuration ---
# Default LLM provider for master agent
DEFAULT_LLM_MODEL_PROVIDER=groq

# Model names (optional overrides)
DEFAULT_OPENAI_GENERATIVE_MODEL=gpt-4
GOOGLE_GEMINI_MODEL_NAME=gemini-pro
GROQ_MODEL_NAME=llama-3.3-70b-versatile
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_GENERATIVE_MODEL_NAME=mistral
HUGGINGFACE_REPO_ID=mistralai/Mixtral-8x7B-Instruct-v0.1

# --- Agent Configuration ---
# Master Agent Temperature
AGENT_TEMPERATURE=0.3

# Summary LLM Temperature
SUMMARY_LLM_TEMPERATURE=0.1

# Sub-Agent Configuration
SUB_AGENT_TEMPERATURE=0.3
DEFAULT_SUB_AGENT_PROVIDER=openai

# --- MCP (Model Context Protocol) ---
MCP_ENABLED=false
# MCP_SERVER_NAME="default"

# --- Workflow Configuration ---
SUMMARY_THRESHOLD=15
MESSAGES_TO_KEEP_AFTER_SUMMARY=3
MAX_ITERATIONS=100

# --- API Security ---
# Allowed origins for CORS (comma separated list or *)
ALLOWED_ORIGINS=["*"]
